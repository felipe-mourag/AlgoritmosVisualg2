algoritmo "ContadorDeVogais"
var
 c, c1 : caractere
 cont , i : inteiro
inicio
   escreval("Digite uma frase: ")
   leia(c)
   para i <- 1 ate compr(c) passo 1 faca
       c1 <- copia(c,i,1)
      se ( c1 = "a") entao
       cont <- cont + 1
      senao
         se ( c1 = "e") entao
           cont <- cont + 1
         senao
              se ( c1 = "i") entao
               cont <- cont + 1
              senao
                   se ( c1 = "o") entao
                     cont <- cont + 1
                   senao
                        se ( c1 = "u") entao
                           cont <- cont + 1
                        fimse
                   fimse
              fimse
         fimse
      fimse
   fimpara
   escreval("A um total de ",cont," vogais na frase ")
fimalgoritmo